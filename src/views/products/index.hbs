<!DOCTYPE html>
<html>
<head>
    <title>Daftar Produk</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>ðŸ“¦ Manajemen Produk</h2>
        <a href="/auth/login" class="btn btn-outline-danger btn-sm">Logout</a>
    </div>

    <div class="card p-3 mb-4 bg-light">
        <div class="row g-2">
            <div class="col-md-8">
                <form action="/products" method="GET" class="d-flex gap-2">
                    <input type="text" name="search" class="form-control" placeholder="Cari nama atau deskripsi..." value="{{search}}">
                    <button type="submit" class="btn btn-primary">Cari</button>
                    {{#if search}}
                        <a href="/products" class="btn btn-secondary">Reset</a>
                    {{/if}}
                </form>
            </div>
            <div class="col-md-4 text-end">
                <a href="/products/create" class="btn btn-success">+ Tambah Produk</a>
            </div>
        </div>
    </div>

    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Nama Produk</th>
                <th>Kategori</th>
                <th>Harga</th>
                <th>Deskripsi</th>
                <th class="text-center">Aksi</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td><strong>{{this.name}}</strong></td>
                <td><span class="badge bg-info text-dark">{{this.category.name}}</span></td>
                <td>Rp {{this.price}}</td>
                <td>{{this.description}}</td>
                <td class="text-center">
                    <a href="/products/edit/{{this.id}}" class="btn btn-sm btn-warning me-2">Edit</a>
                    <a href="/products/delete/{{this.id}}" 
                       class="btn btn-sm btn-danger" 
                       onclick="return confirm('Yakin ingin menghapus {{this.name}}?')">Hapus</a>
                </td>
            </tr>
            {{else}}
            <tr>
                <td colspan="5" class="text-center text-muted py-4">Tidak ada data produk ditemukan.</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</body>
</html>